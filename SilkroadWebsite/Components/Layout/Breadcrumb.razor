<div class="breadcrumb-image" style="background-image: url('@BackgroundImage');">
    <div class="overlay">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    @if (!string.IsNullOrEmpty(ParentLink) && !string.IsNullOrEmpty(ParentTitle))
                    {
                        <li class="breadcrumb-item"><a href="@ParentLink">@ParentTitle</a></li>
                    }
                    <li class="breadcrumb-item active" aria-current="page">@PageTitle</li>
                </ol>
            </nav>
            <h1 class="page-title">@PageTitle</h1>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string PageTitle { get; set; } = "Page";

    [Parameter]
    public string BackgroundImage { get; set; } = "/images/hero.jpg";

    [Parameter]
    public string? ParentLink { get; set; }

    [Parameter]
    public string? ParentTitle { get; set; }
}